<Window x:Class="Hotel_Application.AddNewRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Application"
        mc:Ignorable="d"
        Icon="icon.png"
        Title="Добавление новой комнаты" Height="300" Width="400" MinWidth="300" MinHeight="200">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="16" Foreground="Purple" >Введите название:</TextBlock>
            <TextBox Name="txtRoomName" HorizontalAlignment="Center" FontSize="16" Foreground="Purple" Width="250" TextWrapping="Wrap" Margin="0 5"></TextBox>
            <TextBlock HorizontalAlignment="Center" FontSize="16" Foreground="Purple" Margin="0,10,0,0">Введите цену за день (в рублях):</TextBlock>
            <TextBox Name="txtRoomPrice" HorizontalAlignment="Center" FontSize="16" Foreground="Purple" Width="250" TextWrapping="Wrap" Margin="0 5"></TextBox>
            <Button Name="btnRoomAdd" Foreground="Purple" FontSize="16" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" Click="btnRoomAdd_Click">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
