<Page x:Class="Hotel_Application.RoomInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_Application"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="525"
      Background="White"
      Title="Информация о комнате">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="20" Foreground="Purple">Информация о комнате</TextBlock>
            <TextBlock Name="textBlockName" HorizontalAlignment="Center" FontSize="18" Foreground="Purple" Margin="0 10">Название</TextBlock>
            <TextBlock Name="textBlockPrice" HorizontalAlignment="Center" FontSize="18" Foreground="Purple">Цена</TextBlock>
        </StackPanel>
    </Grid>
</Page>
